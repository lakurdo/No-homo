<Window x:Class="ЧЗКзаеб.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ЧЗКзаеб"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="panelgrid" Background="#E56A82">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <Button x:Name="stud_btn" Style="{StaticResource Buttonssssss}" Content="Задание 1" Margin="10" Click="stud_btn_Click" />
                <Button x:Name="teach_btn" Style="{StaticResource Buttonssssss}" Content="Задание 2" Click="teach_btn_Click" Margin="10" />
                <Button x:Name="sub_btn" Style="{StaticResource Buttonssssss}" Content="Задание 3" Click="sub_btn_Click" Margin="10" />
            </StackPanel>




        </Grid>
        <Frame x:Name="mainframe" Grid.Column="1" NavigationUIVisibility="Hidden"  />

    </Grid>
</Window>
